<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registrar">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_gravity="center"
      android:layout_marginTop="40dp"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/user"
      tools:layout_editor_absoluteY="72dp" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:text="Bienvenido"
      android:textColor="@color/black"
      android:textSize="48dp"
      android:textStyle="bold"
      tools:layout_editor_absoluteX="138dp"
      tools:layout_editor_absoluteY="294dp" />

  <LinearLayout
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="34dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/userdo" />

    <EditText
        android:id="@+id/txtUsuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Registrar usuario..."
        android:inputType="textPersonName"
        android:text=""
        android:textColorLink="#03A9F4"
        android:textCursorDrawable="@drawable/barrasuper" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="34dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/candado" />

    <EditText
        android:id="@+id/txtPasswor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Registrar clave..."
        android:inputType="textPassword"
        android:textColorLink="#03A9F4"
        android:textCursorDrawable="@drawable/barrasuper" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="34dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/candado" />

    <EditText
        android:id="@+id/txtconfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Confirmar clave..."
        android:inputType="textPassword"
        android:textColorLink="#03A9F4"
        android:textCursorDrawable="@drawable/barrasuper" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="34dp"
        android:layout_height="39dp"

        app:srcCompat="@drawable/ardu" />

    <EditText
        android:id="@+id/txtarduino"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Ingresar Id..."
        android:inputType="textPersonName"
        android:text=""
        android:textColorLink="#03A9F4"
        android:textCursorDrawable="@drawable/barrasuper" />
  </LinearLayout>

  <Button
      android:id="@+id/buttonRegistrar"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="40dp"
      android:background="@drawable/degradado"
      android:text="Registrar"
      app:backgroundTint="@null" />


</LinearLayout>